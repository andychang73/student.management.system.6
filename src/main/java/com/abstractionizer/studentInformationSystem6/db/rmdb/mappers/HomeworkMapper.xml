<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.abstractionizer.studentInformationSystem6.db.rmdb.mappers.HomeworkMapper">

    <resultMap id="Homework" type="com.abstractionizer.studentInformationSystem6.db.rmdb.entities.Homework">
        <id column="id" property="id" jdbcType="INTEGER"/>
        <result column="semester_class_id" property="semesterClassId" jdbcType="INTEGER"/>
        <result column="homework" property="homework" jdbcType="VARCHAR" javaType="com.alibaba.fastjson.JSONObject"
                typeHandler="com.abstractionizer.studentInformationSystem6.handlers.JsonObjectTypeHandler"/>
        <result column="deadline" property="deadline" jdbcType="TIMESTAMP"/>
        <result column="status" property="status" jdbcType="TINYINT"/>
        <result column="create_time" property="createTime" jdbcType="TIMESTAMP"/>
        <result column="update_time" property="updateTime" jdbcType="TIMESTAMP"/>
    </resultMap>

    <insert id="create">
        INSERT INTO homework(id, semester_class_id, homework, deadline)
        VALUES (#{homework.id},#{homework.semesterClassId},
                #{homework.homework, typeHandler=com.abstractionizer.studentInformationSystem6.handlers.JsonObjectTypeHandler},
                #{homework.deadline})
    </insert>

    <select id="countBySemesterClassId" resultType="java.lang.Integer">
        SELECT COUNT(id)
        FROM homework
        WHERE semester_class_id = #{semester_class_id}
    </select>
</mapper>