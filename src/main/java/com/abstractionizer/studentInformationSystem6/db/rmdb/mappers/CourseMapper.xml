<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.abstractionizer.studentInformationSystem6.db.rmdb.mappers.CourseMapper">

    <select id="countByCourseIdsOrCourse" resultType="java.lang.Integer">
        SELECT COUNT(id)
        FROM course
        <where>
            <choose>
                <when test="course_ids != null">
                    id IN
                    <foreach collection="course_ids" item="item" open="(" separator="," close=")">
                        #{item}
                    </foreach>
                </when>
                <when test="course != null and course != ''">
                    course = #{course}
                </when>
            </choose>
        </where>
    </select>
</mapper>